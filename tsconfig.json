{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
